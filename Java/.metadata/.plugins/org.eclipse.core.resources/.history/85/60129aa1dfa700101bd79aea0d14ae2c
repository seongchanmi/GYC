			case 0:
				System.out.println("프로그램 종료");
				sc.close(); // 프로그램 종료와 함께 스캐너의 기능을 닫아줌
				return;
			default:
				System.out.println("잘못된 입력입니다."); // default에서 break는 생략이 가능함

			}
		}

	}

