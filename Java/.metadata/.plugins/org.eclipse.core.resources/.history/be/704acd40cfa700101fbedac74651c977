package Test;

import java.util.List;
import java.util.Scanner;

public class LibraryController {
	
	private LibraryService service = new LibraryService();
	Scanner sc = new Scanner(System.in);

	public void run() {
		
		while(true) {
			System.out.println("1. 전체 조회 | 0. 종료");
			int q = sc.nextInt();
			sc.nextLine();
			
			switch(q) {
			case 1: 
				allLibrary();
				break;
			case 0: 
				System.out.println("프로그램 종료");
				sc.close();
				return;
			default:
				System.out.println("잘못된 입력");
			}
		}

		
	}

	private void allLibrary() {
		List<LibraryDTO> list = service.getAllLibrary();
		outLibraryList(list);
		
	}

	private void outLibraryList(List<LibraryDTO> list) {
		if(list == null || list.isEmpty()) {
			System.out.println("등록된 도서 정보 없음");
		} else {
			for(LibraryDTO dto : list) {
				System.out.println(dto);
			}
		}

		
	}

}
